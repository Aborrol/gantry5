{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
    <div class="g-social">
        {% for item in particle.items %}
            <a target="{{ particle.target }}" href="{{ item.link }}" title="{{ item.text }}">
                <span class="{{ item.icon }}"></span>
                <span class="g-social-text">{{ item.text }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}