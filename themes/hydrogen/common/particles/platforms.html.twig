{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	<div class="platforms-sample">
		<div class="g-grid">
			<div class="g-block">
				<div class="g-content">
					<h2>{{ particle.headline|raw }}</h2>
					{{ particle.description|raw }}
				</div>
			</div>
		</div>
		<div class="g-grid">
			{% for platform in particle.platforms %}
				<div class="g-block {{ platform.class }}">
					<div class="g-content">
						<i class="{{ platform.icon }} feature-icons"></i>
						<h4>{{ platform.title|raw }}</h4>
						{{ platform.subtitle|raw }}
						{{ platform.description|raw }}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}