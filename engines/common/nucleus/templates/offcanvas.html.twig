{% set offcanvas %}
    {% if segment.children %}
        {% for segment in segments %}
            {% include '@nucleus/' ~ segment.type ~ '.html.twig' with { 'segments':segment.children } %}
        {% endfor %}
    {% endif %}
{% endset %}

{% if offcanvas|trim %}
<div id="g-offcanvas">{{ offcanvas }}</div>
{% endif %}
