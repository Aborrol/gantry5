{% extends "@gantry-admin/partials/base.html.twig" %}

{% block content %}
    <div id="g5-container" class="container">
        <div class="grid pure-g">
            <div class="block pure-u-1-1">
                <div data-mode-indicator="production"></div>
                <section id="main">
                    <div class="content">
                        <div class="button-bar">
                            <button class="button" type="submit" name="task" value="add"><i class="fa fa-plus"></i> Add</button>
                        </div>
                        <h1><i class="fa fa-fw fa-plug"></i> Themes</h1>

                        <div class="themes card-row grid fixed-blocks pure-g">
                            {% for slug, theme in {'gantry': {'name': 'Gantry', 'icon': 'lock', 'version': '1.0', 'thumbnail': 'template_thumbnail.png'},
                            'foo': {'name': 'Foo', 'icon': 'lock', 'version': '1.0'}} %}
                                <div class="theme card-item pure-u-1-3">
                                    <div class="theme-name">
                                        <i class="fa fa-fw fa-{{ theme.icon }}"></i>
                                        <a href="?option=com_gantryadmin&view=overview&template={{ slug|url_encode }}">{{ theme.name }}</a>
                                        <span class="theme-version">v{{ theme.version }}</span>
                                    </div>
                                    <div class="theme-screenshot">
                                        <a href="?option=com_gantryadmin&view=overview&template={{ slug|url_encode }}"><img src="{{ url('themes://' ~ slug|url_encode ~ '/' ~ theme.thumbnail)|default('http://www.placehold.it/206x150/f4f4f4') }}" /></a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
