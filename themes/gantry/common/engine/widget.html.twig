{% set html %}
   {% include ['widgets/' ~ segment.attributes.name ~ '.html.twig',
   '@nucleus/widgets/' ~ segment.attributes.name ~ '.html.twig']
   ignore missing with {widget: config.widgets[segment.attributes.name] } %}
{% endset %}

{% if html|trim %}
<div class="content{{ segment.classes ? ' ' ~ segment.classes|join(' ') }}">
    {{ html }}
</div>
{% endif %}
