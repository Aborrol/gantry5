{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% set prefix = 'particles.menu.' %}

{% block gantry %}
    <div class="menu-header">
        <h2>Menu Editor</h2>
        <select>
            <option selected>Main Menu</option>
            <option>Alternate Menu</option>
        </select>
    </div>
    <ul class="g-grid menu-selector">
        <li class="g-block">
            Home<i class="fa fa-cog"></i>
            <span class="fa fa-chevron-down"></span>
        </li>
        <li class="g-block">
            Features<i class="fa fa-cog"></i>
            <span class="fa fa-chevron-down"></span>
        </li>
        <li class="g-block">
            Pages<i class="fa fa-cog"></i>
            <span class="fa fa-chevron-down"></span>
        </li>
        <li class="g-block">
            Styles<i class="fa fa-cog"></i>
            <span class="fa fa-chevron-down"></span>
        </li>
        <li class="g-block">
            Download<i class="fa fa-cog"></i>
            <span class="fa fa-chevron-down"></span>
        </li>
        <li class="g-block">
            Contact<i class="fa fa-cog"></i>
            <span class="fa fa-chevron-down"></span>
        </li>
    </ul>


    <div id="settings" class="cards-wrapper">
        <div class="card settings-block">
            <h4>
                Menu Settings
                <div class="enabler">
                    <input type="hidden" value="{{ config.get(prefix ~ 'enabled', 0)|abs }}" />
                    <div class="toggle"><div class="knob"></div></div>
                </div>
            </h4>

            <div class="inner-params">
                {% include 'forms/fields.html.twig'
                with {'blueprints': menu.form, 'data':  config, 'prefix': prefix, 'skip': ['enabled']} %}
            </div>
        </div>
    </div>
{% endblock %}
