{% set headerContent %}
{% block stylesheets %}
<style>
#wpcontent {
    padding-left: 0;
}
</style>
{% endblock %}
{% block javascript %}
{% endblock %}
{% endset %}
{% do parseHtmlHeader(headerContent) %}

{% set footerContent %}
{% block javascript_footer %}
{% endblock %}
{% endset %}
{% do parseHtmlHeader(footerContent, 'footer') %}

{% block content %}
    <div id="g5-container" class="container">
        <div class="grid">
            <div class="block sidebar-block size-1-7">
                <nav id="gantry" class="block sidebar-block">
                    {% include "gantry/partials/navigation.html.twig" %}
                </nav>
            </div>
            <div class="block">
                <div data-mode-indicator="production"></div>
                <section id="main">
                    <div id="main-header">
                        {% include "gantry/partials/header.html.twig" %}
                    </div>
                    <div class="content">
                        {% block gantry %}
                        {% endblock %}
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer_section %}
    <footer id="footer">
        <a href="http://gantry-framework.org">Gantry Administration</a> by <a href="http://www.rockettheme.com">RocketTheme</a>.
    </footer>
{% endblock %}
