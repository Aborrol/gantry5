{% set html %}
    {% if segment.children %}
        {% for segment in segments %}
            {% include '@nucleus/' ~ segment.type ~ '.html.twig' with { 'segments':segment.children } %}
        {% endfor %}
    {% endif %}
{% endset %}

{% if html|trim %}
    <div class="g-grid pure-g{{ segment.classes ? ' ' ~ segment.classes|join(' ') }}">
      {{ html }}
    </div>
{% endif %}


