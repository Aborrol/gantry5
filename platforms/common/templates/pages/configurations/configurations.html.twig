{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% block gantry %}
    <div class="menu-header">
        <span class="float-right">
            <button class="button button-back-to-conf"><i class="fa fa-fw fa-arrow-left"></i> <span>Back to Configuration</span></button>
        </span>
        <h2 class="page-title">
            Configurations
            <a data-g5-lm-add href="{{ gantry.route('picker/layouts')|e }}" class="button button-primary"><i class="fa fa-plus"></i></a>
        </h2>
    </div>

    <div id="configurations" class="cards-wrapper">
        <ul class="g-grid">
            {# TODO: Need to inject the Base Configuration at the top of the list #}
            {% for name, title in gantry.configurations.user %}
                <li class="card g-block size-1-4">
                    <div class="page">
                        <h4>
                            <span data-href="{{ gantry.route('configurations', name, 'rename')|e }}" data-method="POST" data-title-editable="{{ title|e }}" class="title">{{ title|e }}</span> <i class="fa fa-pencil font-small" data-title-edit=""></i>
                        </h4>
                        <div class="inner-params">
                            <img src="http://www.placehold.it/200x250/f4f4f4" />
                        </div>
                        <div class="inner-params">
                            <div class="center">
                                <a data-g5-ajaxify data-g5-ajaxify-target="[data-g5-content-wrapper]" data-g5-ajaxify-params="{{ {"navbar": true}|json_encode|e('html_attr') }}" href="{{ gantry.route('configurations', name, 'styles')|e }}" class="button button-primary">
                                    <i class="fa fa-pencil"></i> <span>Edit</span>
                                </a>
                                <button data-href="{{ gantry.route('configurations', name, 'duplicate')|e }}" data-method="PUT" class="button button-secondary">
                                    <i class="fa fa-code-fork"></i> <span>Duplicate</span>
                                </button>
                                {% if name != 'default' %}
                                <button data-href="{{ gantry.route('configurations', name)|e }}" data-method="DELETE" class="button red">
                                    <i class="fa fa-trash-o"></i> <span>Remove</span>
                                </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
            <li class="card g-block size-1-4 add-new">
                <div class="page">
                    <a data-g5-lm-add href="{{ gantry.route('picker/layouts')|e }}"><i class="fa fa-plus"></i></a>
                </div>
            </li>
        </ul>

        <h2>System Configurations</h2>
        <ul class="g-grid">
            {% for name, title in gantry.configurations.system %}
                <li class="card g-block size-1-4">
                    <div class="page">
                        <h4>{{ title }}</h4>
                        <div class="inner-params">
                            <img src="http://www.placehold.it/200x250/f4f4f4" />
                        </div>
                        <div class="inner-params">
                            {#<span class="float-left">
                                <a href="{{ gantry.route('configurations', layout)|e }}" class="button">
                                    <i class="fa fa-pencil-square-o"></i>
                                    <span>Edit</span>
                                </a>
                            </span>
                            <span class="float-right">23 positions</span>#}
                            <div class="center">
                                <a data-g5-ajaxify data-g5-ajaxify-target="[data-g5-content-wrapper]" data-g5-ajaxify-params="{{ {"navbar": true}|json_encode|e('html_attr') }}" href="{{ gantry.route('configurations', name, 'styles')|e }}" class="button button-primary">
                                    <i class="fa fa-pencil"></i> <span>Edit</span>
                                </a>
                                <button data-href="{{ gantry.route('configurations', name, 'duplicate')|e }}" data-method="PUT" class="button button-secondary">
                                    <i class="fa fa-code-fork"></i> <span>Duplicate</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
