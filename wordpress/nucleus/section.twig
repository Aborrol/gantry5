{% set type = segment.sectiontype in ['header', 'footer'] ? segment.sectiontype : 'section' %}
{% set attr_id = segment.id ? ' id="' ~ segment.id|lower ~ '"' %}
{% set attr_class = segment.classes ? ' class="' ~ segment.id|lower ~ '"' %}

<{{ type }}{{ attr_id }}{{ attr_class }}>
    {% if  segment.children %}
        {% for segment in segments %}
            {% include '@nucleus/' ~ segment.type ~ '.twig' with { 'segments':segment.children } %}
        {% endfor %}
    {% endif %}
</{{ type }}>
