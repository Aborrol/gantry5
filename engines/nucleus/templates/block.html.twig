{% set html %}
    {% if segment.children %}
        {% for segment in segments %}
            {% include '@nucleus/' ~ segment.type ~ '.html.twig' with { 'segments':segment.children } %}
        {% endfor %}
    {% endif %}
{% endset %}

{% if html|trim %}
    <div class="g-block{{ segment.classes ? ' ' ~ segment.classes|join(' ') }} {{ segment.attributes.size|toGrid }}">
        {{ html }}
    </div>
{% endif %}
