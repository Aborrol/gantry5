{% extends ajax ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}


{% block content %}
    <div id="g5-container" class="container">
        <div class="inner-container">
            <div class="grid">
                <div class="block main-block">
                    <section id="main">
                        <div class="content" data-g5-content>
                            {% block gantry %}
                                <div id="g5-container" class="container">
                                    <div class="grid">
                                        <div class="block">
                                            <section id="main">
                                                <div class="content">
                                                    <h1><i class="fa fa-fw fa-plug"></i> Available Themes</h1>

                                                    <div class="themes card-row grid fixed-blocks pure-g">
                                                        {% for id, theme in styles %}
                                                            <div class="theme card-item pure-u-1-3">
                                                                <div class="theme-name">
                                                                    <i class="fa fa-fw fa-{{ theme.icon|default('lock')|e }}"></i>
                                                                    <a href="{{ theme.name }}">{{ theme.name|title|e }}</a> |
                                                                    <a href="{{ theme.name }}/admin">Admin</a>
                                                                </div>
                                                                <div class="theme-id">{{ theme.title|e }}</div>
                                                                <div class="theme-screenshot">
                                                                    <a href="{{ theme.name }}"><img src="{{ url('gantry-themes://' ~ theme.name ~ '/' ~ theme.thumbnail)|default('http://www.placehold.it/206x150/f4f4f4') }}" /></a>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>

                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            {% endblock %}
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer_section %}
{% endblock %}
