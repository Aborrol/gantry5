<div class="g-particles-header filemanager-header settings-block clearfix">{{ active|join(', ') }}</div>

<div class="g-particles-main icons-wrapper g-grid">
    <div class="folders g-block size-1-4">
        <ul class="g-bookmarks">
            {% for index,bookmark in bookmarks %}
                <li class="g-bookmark">
                    <span>{{ index }}</span>
                    <ul class="g-folders">
                        {% for folder in bookmark %}
                            <li>{{ folder }}</li>
                            <ul class="g-bookmark-folders">
                                {% for bookmarkFolder in attribute(attribute(folders, index), folder) %}
                                    <li data-folder="{{ bookmarkFolder|json_encode()|e('html_attr') }}">{{ bookmarkFolder.filename }}</li>
                                {% endfor %}
                            </ul>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
            {#{% for index,folder in folders %}
                <li data-folder="{{ folder|json_encode()|e('html_attr') }}">{{ folder.filename }}</li>
            {% endfor %}#}
        </ul>
    </div>
    <div class="g-files g-block">
        <ul>
            {% for index,file in files %}
                <li data-file="{{ file|json_encode()|e('html_attr') }}">
                    {% if 'image/' in file.mime %}
                    <div class="g-image" style="background-image:url({{ url(file.pathname) }})"></div>
                    {% else %}
                    <div>{{ file.extension }}</div>
                    {% endif %}

                    <span>{{ file.filename }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
<div class="g-breadcrumbs">{{ base }}</div>
<div class="g-particles-footer settings-block clearfix">
    <div class="float-right">
        <a href="#" class="button button-primary" data-select>Select</a>
        <a href="#" class="button g5-dialog-close">Cancel</a>
    </div>
</div>