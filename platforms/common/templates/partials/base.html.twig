{% extends "@gantry-admin/partials/page.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/css-compiled/nucleus.css')|e }}" type="text/css" />
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/css-compiled/admin.css')|e }}" type="text/css" />
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/fonts/awesome/font-awesome.min.css')|e }}" type="text/css" />
    {{ parent() }}
{% endblock %}

{% block javascript %}
    <script type="text/javascript" async="async" crossorigin="anonymous" src="{{ url('gantry-admin://assets/js/main.js')|e }}"></script>
    {{ parent() }}
{% endblock %}

{% block content %}
<div id="g5-container">
    <div id="main-header" data-mode-indicator="production">
        {% include "@gantry-admin/partials/header.html.twig" %}
    </div>
    <div class="inner-container">
        <!-- Update Bar -->
        {% include "@gantry-admin/partials/updates.html.twig" %}
        <div class="g-grid">
            <div class="g-block navbar-block">
                <nav id="gantry">
                    {% include "@gantry-admin/partials/navigation.html.twig" %}
                </nav>
                <span class="gantry-logo"></span>
            </div>
        </div>
        <div class="g-grid">
            <div class="g-block main-block">
                <section id="g-main">
                    <div class="g-content" data-g5-content>
                        {% block gantry %}
                        {% endblock %}
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer_section %}
    <footer id="footer">
        <a href="http://gantry-framework.org">Gantry Administration</a> by <a href="http://www.rockettheme.com">RocketTheme</a>.
    </footer>
{% endblock %}
